<%-include("../partials/header.ejs")%>
<div class="container" style="margin-top: 20px;">
    <h2><strong><%=camp.name%>:</strong></h2>
    <h3 style="text-align: center;">Add new comment:</h3>
    <form action="/campgrounds/<%=camp._id%>/comments" method="POST" style="width: 30%; margin:0 auto;">
        <div class="form-group">
            <p>Text:</p>
            <input class="form-control" type="text" name="comment[text]" placeholder="Enter Comment">
        </div>
        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
        <a href="/campgrounds/<%=camp._id%>">Go Back!</a>
    </form>
</div>
<%-include("../partials/footer.ejs")%>
