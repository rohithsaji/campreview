<%-include("../partials/header.ejs")%>
<div class="container" style="margin-top: 20px;">
    <h3 style="text-align: center;">Edit comment:</h3>
    <form action="/campgrounds/<%=campID%>/comments/<%=comment._id%>?_method=PUT" method="POST" style="width: 30%; margin:0 auto;">
        <div class="form-group">
            <p>Text:</p>
            <input class="form-control" type="text" name="editedComment" value="<%=comment.text%>">
        </div>
        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
        <a href="/campgrounds/<%=campID%>">Go Back!</a>
    </form>
</div>
